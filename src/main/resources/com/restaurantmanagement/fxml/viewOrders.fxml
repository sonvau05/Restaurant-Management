<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.restaurantmanagement.app.controller.ViewOrdersController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <TableView fx:id="ordersTableView">
            <columns>
                <TableColumn text="Order ID" fx:id="orderIdColumn"/>
                <TableColumn text="Total Amount" fx:id="totalAmountColumn"/>
                <TableColumn text="Order Date" fx:id="orderDateColumn"/>
                <TableColumn text="Status" fx:id="statusColumn"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <TextField fx:id="orderIdField" promptText="Enter Order ID"/>
            <ComboBox fx:id="statusComboBox" promptText="Select Status"/>
            <Button text="Update Status" onAction="#handleUpdateStatus"/>
            <Button text="Delete" onAction="#handleDelete"/>
            <Button text="Refresh" onAction="#handleRefresh"/>
        </HBox>
    </VBox>
</AnchorPane>